<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ReservasController" spacing="10" alignment="TOP_CENTER">

    <Label fx:id="tituloEspectaculo" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="butacasSeleccionadasLabel" style="-fx-font-size: 14px;"/>

    <ScrollPane fitToWidth="true">
        <GridPane fx:id="butacasGrid" hgap="5" vgap="5" alignment="CENTER"/>
    </ScrollPane>

    <Button text="Confirmar Reserva" onAction="#confirmarReserva" style="-fx-font-size: 14px;"/>
</VBox>