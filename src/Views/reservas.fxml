<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReservasController">

    <Label fx:id="tituloEspectaculo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="butacasSeleccionadasLabel" style="-fx-font-size: 14px;" />
    <Label fx:id="precioTotalLabel" style="-fx-font-size: 14px; -fx-text-fill: green;" />

    <ScrollPane fitToWidth="true" style="-fx-background-color: grey;">
        <GridPane fx:id="butacasGrid" alignment="CENTER" hgap="5" vgap="5" />
    </ScrollPane>

    <Button onAction="#volverACartelera" style="-fx-font-size: 14px;" text="Volver a la Cartelera" />
    <Button onAction="#confirmarReserva" style="-fx-font-size: 14px;" text="Confirmar Reserva" />
</VBox>
